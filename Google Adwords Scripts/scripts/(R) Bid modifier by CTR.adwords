function main() {
  
  // load or create a sheetService 
  var sheetName = 'AdGroupsBaseBid';
  var sheetService = SpreadsheetLoader.loadSheetService(sheetName); // load   
  var sheetNotExists = !sheetService;
  if(sheetNotExists){
     sheetService = SpreadsheetLoader.createSheetService(sheetName); // create  
     sheetService.addRow(['AdGroup', 'BaseBid']); // add header 
  }
  
  var adGroupsBaseBidService = AdGroupsBaseBidService(sheetService);
  
  /*
  adGroupsBaseBidService.addBaseBid(1100, 100);
  adGroupsBaseBidService.addBaseBid(1200, 10);
  adGroupsBaseBidService.addBaseBid(1300, 1);
  
  Logger.log('%s', adGroupsBaseBidService.getBaseBid(1100));
  */
    
  
  var adgroups = AdsApp.shoppingAdGroups()
  .withCondition('Status IN [ENABLED]')
  .withCondition('CampaignStatus IN [ENABLED]')
  .get();
  
  while(adgroups.hasNext()){
    var adgroup = adgroups.next();
    var adgroupId = adgroup.getId();
    var currentBid = adgroup.bidding().getCpc();
    
    var stats = adgroup.getStatsFor('TODAY'); //TODAY, LAST_30_DAYS
    var defaultBid = adGroupsBaseBidService.getBaseBid(adgroupId);
    if(!defaultBid) {
      defaultBid = currentBid;
      adGroupsBaseBidService.addBaseBid(adgroupId, defaultBid);
    }
    
    Logger.log('[%s] %s CTR, base bid %s', adgroup.getName(), stats.getCtr(), defaultBid);
    
    var newBid = defaultBid + (defaultBid * stats.getCtr());            
    if(currentBid != newBid) {
      adgroup.bidding().setCpc(newBid);    
      Logger.log('bid change %s -> %s', currentBid.toFixed(2), newBid.toFixed(2));
    }    
  }  
}

