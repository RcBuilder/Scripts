/* ADGROUPS BASE-BID SERVICE */
var AdGroupsBaseBidService = function(sheetService) {
  var _sheetService = sheetService;
  
  return {
    getBaseBid: function(adGroupId){
      var row_index = _sheetService.getRowIndex(1, adGroupId);
      if(row_index == -1) return null;
      
      var row = _sheetService.getRowValues(row_index)[0];      
      return parseInt(row[1]);
    },    
    addBaseBid: function(adGroupId, bid){
      _sheetService.addRow([adGroupId, bid]);            
    }
  };
}

